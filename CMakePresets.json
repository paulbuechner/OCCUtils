{
  "version": 6,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 25,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "occutils-ninja-multiconfiguration-vcpkg",
      "displayName": "occutils Ninja Multi-Config",
      "description": "Configure with vcpkg toolchain and generate Ninja project files for all configurations",
      "binaryDir": "${sourceDir}/builds/${presetName}",
      "generator": "Ninja Multi-Config",
      "cacheVariables": {
        "CMAKE_TOOLCHAIN_FILE": {
          "type": "FILEPATH",
          "value": "$env{VCPKG_ROOT}/scripts/buildsystems/vcpkg.cmake"
        },
        "OCCUTILS_BUILD_TESTS": "ON",
        "OCCUTILS_BUILD_WARNINGS": "ON"
      },
      "environment": {
        "VCPKG_ROOT": "./deps/vcpkg"
      }
    }
  ],
  "buildPresets": [
    {
      "name": "occutils-ninja-multiconfiguration-vcpkg",
      "displayName": "Build occutils-ninja-multiconfiguration-vcpkg",
      "configurePreset": "occutils-ninja-multiconfiguration-vcpkg",
      "description": "Build with Ninja the configuration specified with --config",
      "configuration": "Release"
    }
  ],
  "testPresets": [
    {
      "name": "occutils-ninja-multiconfiguration-vcpkg",
      "configurePreset": "occutils-ninja-multiconfiguration-vcpkg",
      "description": "Test with Ninja the provided configuration with --config",
      "configuration": "Release"
    }
  ],
  "packagePresets": [
    {
      "name": "occutils-ninja-multiconfiguration-vcpkg-windows",
      "configurePreset": "occutils-ninja-multiconfiguration-vcpkg-windows",
      "generators": [
        "ZIP",
        "NSIS"
      ],
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Windows"
      }
    },
    {
      "name": "occutils-ninja-multiconfiguration-vcpkg-ubuntu",
      "configurePreset": "occutils-ninja-multiconfiguration-vcpkg-ubuntu",
      "generators": [
        "DEB",
        "RPM"
      ],
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Linux"
      }
    },
    {
      "name": "occutils-ninja-multiconfiguration-vcpkg-macos",
      "configurePreset": "occutils-ninja-multiconfiguration-vcpkg-macos",
      "generators": [
        "DragNDrop",
        "PackageMaker"
      ],
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Darwin"
      }
    }
  ]
}
